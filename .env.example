# =============================================================================
# SALES RAMP AI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Firecrawl API (Web Scraping)
# Get your API key at: https://firecrawl.dev
# -----------------------------------------------------------------------------
FIRECRAWL_API_KEY=your_firecrawl_api_key

# -----------------------------------------------------------------------------
# Salesforce Configuration
# -----------------------------------------------------------------------------
SF_LOGIN_URL=https://login.salesforce.com
SF_USERNAME=your_salesforce_username
SF_PASSWORD=your_salesforce_password
SF_SECURITY_TOKEN=your_security_token

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - enables caching)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
BRIEF_CACHE_TTL_HOURS=24

# -----------------------------------------------------------------------------
# Outreach.io OAuth Configuration
# Create an app at: https://developers.outreach.io
# -----------------------------------------------------------------------------
OUTREACH_CLIENT_ID=your_outreach_client_id
OUTREACH_CLIENT_SECRET=your_outreach_client_secret
OUTREACH_REDIRECT_URI=http://localhost:3000/oauth/callback

# OAuth Tokens (obtained after OAuth flow - stored after first auth)
OUTREACH_ACCESS_TOKEN=
OUTREACH_REFRESH_TOKEN=

# -----------------------------------------------------------------------------
# Kaia Webhook Configuration
# Get from your Kaia admin panel
# -----------------------------------------------------------------------------
KAIA_API_KEY=your_kaia_api_key
KAIA_WEBHOOK_SECRET=your_webhook_secret

# -----------------------------------------------------------------------------
# Stage Engine Settings
# -----------------------------------------------------------------------------
STAGE_HIGH_CONFIDENCE=0.8
STAGE_MEDIUM_CONFIDENCE=0.5
STAGE_AUTO_UPDATE=true
STAGE_ENABLE_FLAGGING=true

# -----------------------------------------------------------------------------
# Audit Settings
# -----------------------------------------------------------------------------
AUDIT_RETENTION_DAYS=90
AUDIT_ENABLE_ROLLBACK=true
AUDIT_LOG_TO_FILE=false
AUDIT_LOG_FILE_PATH=/var/log/sales-ramp/audit.log

# -----------------------------------------------------------------------------
# Stall Alert Configuration
# -----------------------------------------------------------------------------
# Webhook URL for stall alerts (optional)
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# Email configuration for alerts (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=your-smtp-password
ALERT_FROM_EMAIL=alerts@example.com

# -----------------------------------------------------------------------------
# Brief Builder Configuration
# -----------------------------------------------------------------------------
ARTICLE_LOOKBACK_DAYS=90
